{
    "name": "react-hooks",
    "private": true,
    "version": "0.0.0",
    "description": "Collection of React hooks",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build:esm": "yarn tsc -b ./tsconfig.esm.json",
        "build:cjs": "yarn tsc -b ./tsconfig.cjs.json",
        "build": "yarn build:cjs && yarn build:esm",
        "test": "yarn jest",
        "lint": "eslint --ext .js,.ts .",
        "verify": "yarn build && yarn test && yarn lint",
        "changeset": "changeset",
        "release": "yarn verify && changeset publish"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sevenwestmedia-labs/react-hooks.git"
    },
    "keywords": [
        "React",
        "Hooks"
    ],
    "author": "Seven West Media WA",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/sevenwestmedia-labs/react-hooks/issues"
    },
    "homepage": "https://github.com/sevenwestmedia-labs/react-hooks#readme",
    "dependencies": {
        "@changesets/cli": "^2.4.0",
        "@types/enzyme": "^3.10.3",
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.7",
        "@types/react": "^16.9.11",
        "@types/react-dom": "^16.9.4",
        "@typescript-eslint/eslint-plugin": "^2.7.0",
        "@typescript-eslint/parser": "^2.7.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.15.1",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-config-wanews-base": "^2.0.2",
        "jest": "^24.9.0",
        "prettier": "^1.19.1",
        "promise-completion-source": "^1.0.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "ts-jest": "^24.1.0",
        "tslib": "^2.0.1",
        "typescript": "^3.7.2"
    }
}
